package LabTwo;
import java.util.*;

public class Lotto {
	public static int[] lottoNumbers = {0, 0, 0};
	public static int sum = 0;
		
	public Lotto() {
		
		Random random = new Random();		
		lottoNumbers[0] = (int)random.nextInt(10-1) + 1;
		lottoNumbers[1] = (int)random.nextInt(10-1) + 1;
		lottoNumbers[2] = (int)random.nextInt(10-1) + 1;
		
		for (int i : lottoNumbers) {
			sum += i;
		}		
	}
	
	public static void DisplayArray(Lotto l) {
		System.out.printf("The numbers were: %s%n%n and the sum was %s", Arrays.toString(lottoNumbers), sum);		
	}
	
}

