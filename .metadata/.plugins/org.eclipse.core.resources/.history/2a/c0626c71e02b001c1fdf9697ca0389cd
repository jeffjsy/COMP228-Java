package LabTwo;
import java.util.*;

public class LottoTest {

	public static void main(String[] args) {
		
		int gameCount = 6; // Keeps track of number of rounds 
		
		while (gameCount > 1 ) {  
			
			Lotto lotto = new Lotto();			
			gameCount--; 
			
			Scanner input = new Scanner(System.in);		
			System.out.printf("Please guess an integer between 3 and 27: ");		
			int userGuess = input.nextInt(); 
			
			if (Lotto.sum == userGuess) {
				System.out.println("Correct!");				
				Lotto.DisplayArray(lotto);
				Lotto.sum = 0;
				gameCount = 0;  // If user guesses correctly, end loop
			} else if (gameCount == 1) {
				System.out.println("Computer Wins");
				Lotto.DisplayArray(lotto);
				Lotto.sum = 0;				
			} else {
				System.out.printf("Please try again. The numbers were ");
				Lotto.DisplayArray(lotto);
				Lotto.sum = 0;				
			}
			
		}
	}	
}
